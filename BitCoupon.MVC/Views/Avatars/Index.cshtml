@model IEnumerable<BitCoupon.DAL.Models.Avatar>

@{
    ViewBag.Title = "Index";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Avatars</h2>
            <br />
            <p><span style="color:red">Click on name of avatar</span></p>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Avatar Name</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p style="cursor:pointer" onclick="displayAvatar('@item.Id')">@item.Name</p>
                        </td>
                    </tr>

                }

            </table>
        </div>
    </div><!--/span-->

</div><!--/row-->

<script>
    function displayAvatar(id)
    {
        $.ajax({
            url: '/Avatars/Details/' + id
        }).success(function (response) {
            bootbox.dialog({ message: response });
        }).error(function (response) {
            bootbox.alert(response.status);
        });
    }
</script>

