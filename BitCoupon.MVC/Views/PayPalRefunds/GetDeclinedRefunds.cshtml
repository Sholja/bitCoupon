@model IEnumerable<BitCoupon.DAL.Models.PayPalRefund>

@{
    ViewBag.Title = "GetDeclinedRefunds";
}


<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Declined Refunds</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Reson for Refund</th>
                        <th>Other Reasons</th>
                        <th>Payment ID</th>
                        <th>Status</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Option)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Content)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Finished)
                        </td>
                    </tr>

                }

            </table>
        </div>
    </div><!--/span-->

</div><!--/row-->